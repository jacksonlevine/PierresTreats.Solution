@{
  Layout = "_Layout";
}

@using PierresTreats.Models

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>No recipes have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Treat recipe in Model)
    {
      <li>@Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.TreatId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>